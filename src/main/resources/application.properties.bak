spring.application.name=orfeu-music

# ConfiguraÁıes de banco (ajuste conforme seu ambiente)
spring.datasource.url=jdbc:postgresql://localhost:5432/orfeumusic
spring.datasource.username=postgres
spring.datasource.password=ifrn
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

spring.flyway.enabled=true
spring.flyway.locations=classpath:db/migration


# Configura√ß√µes do JWT
app.jwtSecret=orfeuMusicSecretKey12345678901234567890123456789012
app.jwtExpirationMs=86400000  # 24 horas em milissegundos

# Configura√ß√µes de seguran√ßa
spring.security.user.name=admin
spring.security.user.password=admin123
spring.security.user.roles=ADMIN

# Configura√ß√µes do CORS
cors.allowed-origins=*
cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
cors.allowed-headers=*

# Configura√ß√µes adicionais do JPA
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true
spring.jpa.properties.hibernate.temp.use_jdbc_metadata_defaults=false

# Configura√ß√µes de logging para depura√ß√£o
logging.level.org.springframework.security=DEBUG
logging.level.br.orfeu.music=DEBUG
